<div class="row">
	<div class="col-sm-3"></div>
	<div class="col-sm-5">
		<h1>Create a new widget</h1>
		<form action="/api/v1/widget" id="new-widget-form">
			<%- include('./form-groups.ejs') %>
			<div class="text-right">
				<button id="submitButton" type="submit" class="btn btn-dark" data-test="submit">
					Create
				</button>
			</div>
		</form>
	</div>
</div>
<script src="/js/_fetch.js"></script>
<script>
	const form = document.getElementById("new-widget-form");
	form.addEventListener("submit", (event) => {
		if (handleFormSubmit(event, "POST")) {
			const nameInput = document.getElementById('name');
			showBanner(`Success. New widget with name '${nameInput.value}' was created.`, 'success');
			form.reset();
			nameInput.focus();
		}
	});
</script>