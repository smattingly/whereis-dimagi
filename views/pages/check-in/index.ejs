<div class="d-flex justify-content-between">
    <div>
        <h1>Check Ins</h1>
    </div>
    <div>
        <a href="/check-in/new" data-test="new-check-in-link" aria-label="Create a new check-in">
            <i class="fa fa-plus-circle" style="font-size: 48px; color: black" data-toggle="tooltip"
                data-placement="right" title="Create a new check-in">
            </i>
        </a>
    </div>
</div>

<style>
    table th:nth-child(7) { width:5%; text-align: center; }
    table td:nth-child(7) { width:5%; text-align: center; }
</style>

<div id="infinite-scroller" class="sticky-table-container">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-right">#</th>
                <th>Email</th>
                <th>Time</th>
                <th>Location</th>
                <th class="text-right">Latitude</th>
                <th class="text-right">Longitude</th>
                <th><i class="fa fa-trash-o" style="font-weight: bold; color: black"></i></th>
            </tr>
        </thead>

        <tbody id="table-body"></tbody>
    </table>
    <div id="loading" class="mx-auto" style="width: 150px;">
        <div class="spinner-border text-primary"></div>
    </div>
</div>

<script src="/js/_infinite-scroller.js"></script>
<script>
    infiniteScroll('/api/v1', '/checkin', [{ attr: "id", align: "right" }, { attr: "email", align: 'left' }, { attr: 'time', align: 'left' }, { attr: 'location', align: 'left' }, { attr: 'lat', align: 'right' }, { attr: 'lng', align: 'right' }]);
</script>